<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="bottom"
    android:id="@+id/nav_linear"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@drawable/side_nav_bar"
    android:weightSum="1"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/no_photo"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:layout_centerVertical="true"
        android:id="@+id/person_avatar" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="1"
                android:layout_marginLeft="10dp"
                android:paddingLeft="1dp"
                android:layout_marginTop="4dp"
                android:id="@+id/text_name_reg"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/cardview_light_background"
                android:text="name"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <TextView
                android:maxLines="1"
                android:layout_toRightOf="@+id/text_name_reg"
                android:layout_width="wrap_content"
                android:layout_marginLeft="7dp"
                android:textSize="16sp"
                android:textColor="@color/cardview_light_background"
                android:text="user"
                android:id="@+id/text_user_reg"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voiti"
                android:layout_width="wrap_content"
                android:paddingRight="15dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="ВОЙТИ"
                android:textColor="#ffff"
                android:textSize="12sp"
                android:textStyle="bold"
                android:onClick="onVoiti" />

            <View
                android:layout_width="1.5dp"
                android:background="@color/cardview_light_background"
                android:layout_height="fill_parent"></View>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
